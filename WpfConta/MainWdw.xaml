            </TabItem>

            <TabItem Name="ReportTab" >
                <DockPanel Name="ReportContent" LastChildFill="True" VerticalAlignment="Stretch">
                    <StackPanel DockPanel.Dock="Bottom">
                        <Button Name="CloseReportBtn" Margin="5" HorizontalAlignment="Right" Click="CloseReportBtn_Click">_Close</Button>
